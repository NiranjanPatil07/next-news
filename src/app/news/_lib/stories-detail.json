            {
              "role": "text",
              "text": "Meta Platforms Inc.",
              "security": {
                "text": "Meta Platforms Inc. (FB)",
                "ticker": "FB:US",
                "template": "Stock",
                "name": "Meta Platforms Inc",
                "tickerName": "FB:US",
                "watchlist": true,
